<div class="container">

    <form id="newProduct" >
        <div class="form-header">
            <h2>Ingrese nuevo producto: </h2>
        </div>

        <label for="Nombre">Nombre:</label>
        <input id="nombre" type="text" class="form-control" name="nombre" placeholder="Nombre" required>

        <label for="Descripcion">Descripcion:</label>
        <input id="descripcion" type="text" class="form-control" name="descripcion" placeholder="Descripcion" required>

        <label for="Codigo">Codigo:</label>
        <input id="codigo" type="text" class="form-control" name="codigo" placeholder="Codigo" required>

        <label for="Foto">Foto (url):</label>
        <input id="foto" type="url" class="form-control" name="foto" placeholder="Foto" required>

        <label for="Precio">Precio:</label>
        <input id="precio" type="text" class="form-control" name="precio" placeholder="Precio" required>
        
        <label for="Stock">Stock:</label>
        <input id="stock" type="number" class="form-control" name="stock" placeholder="Stock" required>
        
        <button type="submit">Enviar</button>

    </form>
</div>
<div class="comprar">
    <a href="/carrito"><button>Comprar</button></a>
    </div>

